{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "subject-case": [
      2,
      "always",
      ["sentence-case", "start-case", "pascal-case", "upper-case", "lower-case"]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "deps",
        "core",
        "cursor-pagination",
        "filter",
        "knexion-test-utils",
        "page-pagination",
        "soft-delete",
        "sort",
        "transform"
      ]
    ],
    "type-enum": [
      2,
      "always",
      [
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "refactor",
        "revert",
        "style",
        "test"
      ]
    ]
  }
}
